<div class = "row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/banner.jpg" class="panel-image-preview"height="100px" width="260px">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/avatar1.jpg" height="50px" width="50px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                </div>
            </div>
          </div>
          </div>
      </div>
    <div class = "col-xs-6">
      <% for @p in @posts %>
        <div class="panel panel-default post-panel">
          <div class="panel-body">
            <div class="col-sm-1">
              <img src="/avatar1.jpg" class="rounded-img" height="50px" width="50px"></img>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@p.user_id).username %>"><%= User.find(@p.user_id).username %></a></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @p.content %></p>
            </div>
          </div>
        </div>
      <% end %>
          <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <a href="#top"><p class="opacity: .7;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
        </div>
      </div>
    </div>
    </div>

</div> 



